<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AddBacSi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm bác sĩ"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:background="#673AB7"
            android:textColor="@color/white"/>




        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/addBSName"
            android:hint="Tên"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"
           />


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/addBSEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFaculty"
            android:hint="Nhập chuyên khoa"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtURL"
            android:hint="URL ảnh"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:layout_width="165dp"
               android:layout_marginTop="30dp"
               android:background="@drawable/rounded"

               android:layout_height="wrap_content"
               android:text="Thêm mới bác sĩ"
               android:id="@+id/btnAddBS"/>
           <Button
               android:layout_width="165dp"
               android:layout_marginLeft="50dp"
               android:layout_marginTop="30dp"
               android:layout_height="wrap_content"
               android:text="Quay lại"
               android:background="@drawable/rounded"
               android:id="@+id/btnBACK"/>

       </LinearLayout>



    </LinearLayout>




</ScrollView>