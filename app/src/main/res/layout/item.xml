<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:layout_gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivhinhAdmin"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/avatar_bacsi" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenBSAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Bác sĩ  "
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:id="@+id/txtEmailBS"

            android:hint="Email "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/txtFaculty"
            android:hint="Chuyên khoa"/>
        <Button
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="@drawable/rounded"

            android:id="@+id/btnDLK"
            android:text="Đặt lịch khám"/>


    </LinearLayout>

</LinearLayout>



</androidx.cardview.widget.CardView>